@model European_Immigration.Models.Country
@{
    ViewBag.Title = Model.CountryName;
    Layout = "~/Views/Shared/_LayoutNoFooter.cshtml";   
}

    <body background="\images\@Model.CountryName.ToLower()Img.jpg">
        <h2 id="countryName">@Model.CountryName</h2>
        <img id="flag" src="@Url.Content(Model.Flag)" alt="Image" />
        <table id="country" class="table table-bordered table-hover table-country">
            <thead>
                <tr>
                    <th>General</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>Capital: @Model.Capital</td></tr>
                <tr><td>Population: @(Model.Population?.ToString("#,##0") ?? "0")</td></tr>
                <tr><td>Cost of living: @Model.GeneralData.CostOfLiving</td></tr>
                <tr><td>Rent Index: @Model.GeneralData.RentIndex</td></tr>
                <tr><td>Cost of Living Plus Rent Index: @Model.GeneralData.CostOfLivingPlusRentIndex</td></tr>
                <tr><td>Groceries Index: @Model.GeneralData.GroceriesIndex</td></tr>
                <tr><td>Tax Rate(Income): @Model.GeneralData.TaxRateIncome</td></tr>
                <tr><td>Local Purchasing Power Index: @Model.GeneralData.LocalPurchasingPowerIndex</td></tr>
                <tr><td>Safety Index: @Model.GeneralData.SafetyIndex</td></tr>
            </tbody>
        </table>

        <table id="quality" class="table table-bordered table-hover table-country">
            <thead>
                <tr>
                    <th>Quality Of Life</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>Quality of Life Index: @Model.QualityOfLife.QualityOfLifeIndex</td></tr>
                <tr><td>Purchasing Power Index: @Model.QualityOfLife.PurchasingPowerIndex</td></tr>
                <tr><td>Safety Index: @Model.QualityOfLife.safetyIndex</td></tr>
                <tr><td>Healthcare Index: @Model.QualityOfLife.healthcareIndex</td></tr>
                <tr><td>Cost of Living Index: @Model.QualityOfLife.costOfLivingIndex</td></tr>
                <tr><td>Property Price to Income Ratio: @Model.QualityOfLife.propertyPriceToIncomeRatio</td></tr>
                <tr><td>Traffic Commute Time Index: @Model.QualityOfLife.trafficCommuteTimeIndex</td></tr>
                <tr><td>Pollution Index: @Model.QualityOfLife.pollutionIndex</td></tr>
                <tr><td>Climate Index: @Model.QualityOfLife.climateIndex</td></tr>
            </tbody>
        </table>

        <table id="taxes" class="table table-bordered table-hover table-country">
            <thead>
                <tr>
                    <th>Taxes</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>Corporate Tax: @Model.Taxes.CorporateTax</td></tr>
                <tr><td>Income Tax: @Model.Taxes.IncomeTax</td></tr>
                <tr><td>VAT: @Model.Taxes.Vat</td></tr>
            </tbody>
        </table>

        <table id="politics" class="table table-bordered table-hover table-country">
            <thead>
                <tr>
                    <th>Politics And Economics</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>Rule of Law Index: @Model.PoliticsAndEconomics.RuleOfLawIndex</td></tr>
                <tr><td>Political Stability Index: @Model.PoliticsAndEconomics.PoliticalStabilityIndex</td></tr>
                <tr><td>Corruption Index: @Model.PoliticsAndEconomics.CorruptionIndex</td></tr>
                <tr><td>State Fragility Index: @Model.PoliticsAndEconomics.StateFragilityIndex</td></tr>
                <tr><td>Economic Growth: @Model.PoliticsAndEconomics.EconomicGrowth</td></tr>
                <tr><td>GDP per capita: $@Model.PoliticsAndEconomics.GdpPerCapita</td></tr>
            </tbody>
        </table>

        <table id="health" class="table table-bordered table-hover table-country">
            <thead>
                <tr>
                    <th>Healthcare and Science</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>Healthcare Index: @Model.HealthcareAndScience.HealthcareIndex</td></tr>
                <tr><td>Life Expectancy: @Model.HealthcareAndScience.LifeExpectancy</td></tr>
                <tr><td>Scientific Documents - H Index: @Model.HealthcareAndScience.ScientificDocumentsHIndex</td></tr>
                <tr><td>Human Development Index: @Model.HealthcareAndScience.HumanDevelopmentIndex</td></tr>
            </tbody>
        </table>
    </body>